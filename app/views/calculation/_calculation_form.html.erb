<%= form_tag calculation_path, method: :post do %>
  <p>
    <%= label_tag(:long_term_rent, 'Your typical long term rental income:') %>
  <br />
  <%= number_field_tag(:long_term_rent, 200, step: 1) %>
  </p>

  <p>
    <%= label_tag(:address, 'Your address:') %>
    <br />
    <%= text_field_tag(:address) %>
  </p>

  <%= submit_tag('Calculate your profit!') %>
<% end %>
